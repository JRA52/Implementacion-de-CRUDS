<%= form_with(model: proyecto) do |form| %>
  <% if proyecto.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(proyecto.errors.count, "error") %> prohibited this proyecto from being saved:</h2>

      <ul>
        <% proyecto.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :codigo, style: "display: block" %>
    <%= form.number_field :codigo %>
  </div>

  <div>
    <%= form.label :fecha_inicio, style: "display: block" %>
    <%= form.date_field :fecha_inicio %>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :valor, style: "display: block" %>
    <%= form.text_field :valor %>
  </div>

  <div>
    <%= form.label :descripion, style: "display: block" %>
    <%= form.text_area :descripion %>
  </div>

  <div>
    <%= form.label :cliente_id, style: "display: block" %>
    <%= form.collection_select :cliente_id, Cliente.all, :id, :name, {prompt: "Cliente:"} %>
  </div>

  <div>
    <%= form.label :estatus_id, style: "display: block" %>
    <%= form.collection_select :estatus_id, Estatus.all, :id, :name, {prompt: "Estado actual:"} %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
